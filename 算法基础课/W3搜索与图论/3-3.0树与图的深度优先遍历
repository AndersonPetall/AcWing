https://www.acwing.com/problem/content/848/



#include<iostream>
using namespace std;
int h[N], e[M], ne[M], idx,;
bool st[N];
void add(int a, int b){
    e[idx] = b, ne[idx] = h[a], h[a] = idx++;
}
int dfs(int u){
    st[u] = true;
    for(int i = h[u]; i != -1; i = ne[i])){
        int j = e[i];
        if(!st[j])dfs(j);
    }
}
int main(){
    memeset(h, -1, sizeof h);
    dfs(1);
}
